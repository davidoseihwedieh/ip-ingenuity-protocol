{
  "name": "creator-token-platform",
  "version": "1.0.0",
  "description": "A platform for tokenizing creator assets and enabling fan investment",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/server.js",
    "client:dev": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "node server/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "deploy:contracts": "npx hardhat run scripts/deploy.js --network polygon"
  },
  "keywords": [
    "creator-economy",
    "tokenization",
    "blockchain",
    "investment",
    "social-media"
  ],
  "author": "CreatorFi Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "@web3-react/core": "^8.2.3",
    "@web3-react/metamask": "^8.2.4",
    "ethers": "^6.8.1",
    "web3": "^4.3.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@hardhat/hardhat-toolbox": "^3.0.2",
    "hardhat": "^2.19.2",
    "@openzeppelin/contracts": "^5.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/creator-token-platform.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/creator-token-platform/issues"
  },
  "homepage": "https://github.com/yourusername/creator-token-platform#readme"
}